<div class="well well-lg">
  <h4 class="card-title"><%=recipe.title%></h4>
  <img class="card-img-top" src="<%=recipe.image_link%>" alt="<%=recipe.title%>">
  <div class="card-block">
    <p class="card-text"><%=recipe.description%></p>

        Created by: <%=link_to("@#{recipe.user.username}", user_path(recipe.user), class:"user-link")%>

     <br>
  </div>
  <div class="card-block">
    <a href="/categories/<%=recipe.category_id%>/recipes/<%=recipe.id%>" class="card-link">Check it out!</a>
  </div>

</div>
